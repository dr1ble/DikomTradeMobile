<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DikomMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="CustomWelcomeButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:drawablePadding">0dp</item> <!-- Убирает отступ между иконкой и текстом -->
    </style>

    <style name="CustomBottomNavView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="backgroundTint">@color/bottom_nav_background</item>
        <item name="itemBackground">@android:color/transparent</item> <!-- Убирает фон -->
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <style name="CustomBottomNavTextStyleActive">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:spacing">0.5sp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="CustomBottomNavTextStyleInActive">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:spacing">0.5sp</item>
    </style>


    <style name="Theme.DikomMobile" parent="Base.Theme.DikomMobile" />
</resources>